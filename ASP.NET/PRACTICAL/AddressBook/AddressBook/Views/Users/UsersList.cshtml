@model DataTable
@using System.Data
<main id="main" class="main">

    <div class="pagetitle">
        <h1>User</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Users</a></li>
                <li class="breadcrumb-item">Tables</li>
                <li class="breadcrumb-item active">Data</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <div>
                            <h5 class="card-title">Search User</h5>

                            <form class="row g-3">
                                <div class="col-md-4">
                                    <label for="userName" class="form-label">User Name</label>

                                    <input type="number" class="form-control  border border-black" placeholder="User Name">
                                </div>
                                <div class="col-md-4">
                                    <label for="Email" class="form-label">Email</label>

                                    <input type="text" class="form-control  border border-black" placeholder="Email">
                                </div>
                                <div class="col-md-4">
                                    <label for="Mobile" class="form-label">Mobile</label>

                                    <input type="number" class="form-control  border border-black" placeholder="Mobile">
                                </div>
                                <div class="text-start">
                                    <button type="submit" class="btn btn-success">Search</button>
                                    <button type="reset" class="btn btn-danger">Reset</button>
                                </div>
                            </form><!-- End No Labels Form -->
                        </div>
                    </div>
                </div>
            </div>
    </section>
          <div class="text-danger">
                            @{
        if (@TempData["SuccessMessage"] != null)
        {
            <p>@TempData["SuccessMessage"]</P>
    }
     if (@TempData["ErrorMessage"] != null)
        {
            <p>@TempData["ErrorMessage"]</P>
    }
    }
    </div>
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        @* <span class="text-danger">@TempData["ErrorMessage"]</span> *@

                        <h2 class="mt-3">User List</h5>
                        <a class="btn btn-success float-end mb-2 mt-2" asp-area="" asp-controller="Users" asp-action="UsersForm">+Add Users</a>

                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                     <th>UserID</th> 
                                    <th>UserName</th>
                                    <th>MobileNo</th>
                                    <th>EmailID</th>
                                    <th>CreationDate</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Example of rows with user data -->
                                @foreach (DataRow dataRow in Model.Rows)
                                {
                                    <tr>
                                        <td>@dataRow["UserID"]</td>
                                        <td>@dataRow["UserName"]</td>
                                        <td>@dataRow["MobileNo"]</td>
                                        <td>@dataRow["EmailID"]</td>
                                        <td>@dataRow["CreationDate"]</td>
                                        <td>
                                            <a asp-controller="Users" asp-action="UsersList" class="btn btn-primary"onclick="return confirm('Are you sure you want to Edit this User?')">
                                                <i class="bi bi-pencil-fill"></i>Edit

                                            </a>
                                            <a asp-controller="Users" asp-action="UserDelete" asp-route-UserID="@dataRow["UserID"]" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure you want to Edit this User?')">
                                                <i class="bi bi-x">Delete</i>
                                            </a>

                                        </td>
                                    </tr>
                            
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->