@model AddressBook.Models.CountryModel

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Country</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Country</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Layouts</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-100">

                <div class="card">
                    <div class="card-body">

                        <!-- Horizontal Form -->
                                <div class="container mt-5">
                                    <h2 class="mb-4">Add/Edit Country </h2>
                                    <form>
                                        @* <div class="mb-3"> *@
                                        @*     <label for="countryid" class="form-label">Country ID</label> *@
                                        @*     <input type="text" class="form-control" id="countryid" name="countryid" required> *@
                                        @* </div> *@
                                        <div class="mb-3">
                                            <label for="countryname" class="form-label"><span style="color: red;">*</span> Country Name</label>
                                            <input asp-for="CountryName" type="text" class="form-control">
                                            <span asp-validation-for="CountryName" class="form-text" style="color: red;"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label for="countrycode" class="form-label"><span style="color: red;">*</span> Country Code</label>
                                            
                                            <input asp-for="CountryCode" type="text" class="form-control">
                                            <span asp-validation-for="CountryCode" class="form-text" style="color: red;"></span>

                                           
                                        </div>
                                        
                                        @* <div class="mb-3"> *@
                                        @*     <label for="creationdate" class="form-label">Creation Date</label> *@
                                        @*     <input type="date" class="form-control" id="creationdate" name="creationdate" required> *@
                                        @* </div> *@
                                        <button type="submit" class="btn btn-success">Submit</button>
                                    <a class="btn btn-danger" asp-area="" asp-controller="Country" asp-action="CountryList">Cancel</a>

                                    </form>
                                </div>

                               
                        <!-- End Horizontal Form -->

                    </div>
                </div>
                </div>
                </div>
                </section>
                </main>

