@{
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Product List</h2>

    <a class="btn btn-success float-end mb-3" asp-area="" asp-controller="Home" asp-action="User_Form">Add User</a>

    <table class="table table-striped table-bordered">

        <thead>
            <tr class="table-dark">
                <th>ID</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
            </tr>
           
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>Smartphone</td>
                <td>Latest model with 5G connectivity</td>
                <td>$699</td>
                <td> 5</td>
                
              </tr>
             <tr>
                <td>@ViewBag.ID</td>
                <td>@ViewBag.name</td>
                <td>@ViewBag.email</td>
                <td>@ViewBag.phone</td>
                <td>@ViewBag.address</td>
             </tr>
        </tbody>
    </table>


</div>
