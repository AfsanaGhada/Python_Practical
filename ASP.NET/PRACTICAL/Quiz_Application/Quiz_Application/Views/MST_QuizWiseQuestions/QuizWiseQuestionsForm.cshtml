@model Quiz_Application.Models.QuizWiseQuestion

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Add/Edit QulzWiseQuestion</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-Controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Layouts</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-100">

                <div class="card">
                    <div class="card-body">

                        <!-- Horizontal Form -->
                        <body>
                            <div class="container mt-5">
                                <h2 class="mb-4">Add/Edit QuizWiseQuestion</h2>

                                <!-- Form for adding quiz wise question data -->
                                <form asp-action="QuizWiseQuestionSave" asp-controller="MST_QuizWiseQuestions" method="POST">
                                    <input type="hidden" asp-for="QuizWiseQuestionsID" />

                                    @* <div class="mb-3"> *@
                                    @*     <label for="quizID" class="form-label"> <span style="color: red;">*</span> Quiz Name</label> *@
                                    @*     <input asp-for="QuizID" type="number" class="form-control" placeholder="Enter Quiz Name"> *@
                                    @*     <span asp-validation-for="QuizID" class="form-text  text-danger"></span> *@
                                    @* </div> *@
                                    <div class="mb-3">
                                        <label for="quizID" class="form-label">
                                            <span style="color: red;">*</span> Quiz Name
                                        </label>
                                        <select asp-for="QuizID" class="form-control">
                                            <option value="">Select Quiz</option>
                                            @foreach (var quiz in ViewBag.QuizList)
                                            {
                                                <option value="@quiz.QuizID">@quiz.QuizName</option>
                                            }
                                        </select>
                                        <span asp-validation-for="QuizID" class="form-text text-danger"></span>
                                    </div>


                                    <div class="mb-3">
                                        <label for="questionID" class="form-label">
                                            <span style="color: red;">*</span> Question
                                        </label>
                                        <select asp-for="QuestionID" class="form-control">
                                            <option value="">Select Question</option>
                                            @if (ViewBag.QuestionList != null)
                                            {
                                                @foreach (var question in ViewBag.QuestionList)
                                                {
                                                    <option value="@question.QuestionID">@question.QuestionText</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="QuestionID" class="form-text text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label for="userID" class="form-label"> <span style="color: red;">*</span> User Name</label>
                                        <input asp-for="UserID" type="number" class="form-control" placeholder="Enter User Name">
                                        <span asp-validation-for="UserID" class="form-text  text-danger"></span>
                                    </div>
                                    @* <div class="mb-3"> *@
                                    @*     <label for="created" class="form-label">Created</label> *@
                                    @*     <input type="datetime-local" class="form-control" id="created" name="created" required> *@
                                    @* </div> *@
                                    @* <div class="mb-3"> *@
                                    @*     <label for="modified" class="form-label">Modified</label> *@
                                    @*     <input type="datetime-local" class="form-control" id="modified" name="modified"> *@
                                    @* </div> *@

                                    <!-- Submit Button -->
                                    <button type="submit" class="btn btn-success">Submit</button>
                                    <a class="btn btn-danger" asp-area="" asp-controller="MST_QuizWiseQuestions" asp-action="QuizWiseQuestionsList">Cancle</a>


                                </form>
                            </div>

                            
                        </body>
                        <!-- End Horizontal Form -->

                    </div>
                </div>
                </div>
</div>
</section>
</main>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

}
