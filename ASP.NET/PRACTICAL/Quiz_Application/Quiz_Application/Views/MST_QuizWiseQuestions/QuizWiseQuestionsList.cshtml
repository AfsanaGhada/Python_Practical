@{
}
@model DataTable
@using System.Data

<main id="main" class="main">

    <div class="pagetitle">
        <h1>QulzWiseQuestion List </h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-Controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item">Tables</li>
                <li class="breadcrumb-item active">Data</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <div>
                            <h5 class="card-title">Search Question</h5>

<form asp-action="QuizWiseQuestionSearch" method="get" class="row g-3">
    <div class="col-md-4">
        <label for="quizName" class="form-label">Quiz Name</label>
        <input type="text" name="quizName" class="form-control" placeholder="Enter Quiz Name">
    </div>

    <div class="col-md-4">
        <label for="question" class="form-label">Question</label>
        <input type="text" name="question" class="form-control" placeholder="Enter Question Text">
    </div>

    <div class="col-md-4">
        <label for="quizWiseQuestionID" class="form-label">Quiz Wise Question ID</label>
        <input type="number" name="quizWiseQuestionID" class="form-control" placeholder="Enter ID">
    </div>

    <div class="col-md-12 text-start">
        <button type="submit" class="btn btn-success">Search</button>
        <button type="reset" class="btn btn-danger">Reset</button>
    </div>
</form>


                        </div>

                    </div>

                </div>
            </div>
        </div>
    </section>

    <br />
     <div class="text-danger">
                            @{
        if (@TempData["SuccessMessage"] != null)
        {
            <p>@TempData["SuccessMessage"]</P>
    }
     if (@TempData["ErrorMessage"] != null)
        {
            <p>@TempData["ErrorMessage"]</P>
    }
    }
    </div>
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                           

                        <h1 class="">QuizWiseQuestions List</h1>
                                <div class="m-3">
                                <a asp-controller="MST_QuizWiseQuestions" asp-action="ExportToExcel" class="btn btn-primary float-end ms-2">
                                    <i class="fa fa-file-excel"></i> Download Excel
                                </a>
                            </div
                        <div class="d-flex p-3 justify-content-end">
                            <a asp-controller="MST_QuizWiseQuestions" asp-action="QuizWiseQuestionsForm" class="btn btn-success  float-end">
                                <i class="bi bi-plus"></i> Add QuizWiseQuestions
                            </a>
                        </div>
   
                        <!-- Table with stripped rows -->
                        <table class="table datatable">
                           <thead>
                                            <tr>
                                                <th>QuizWiseQuestionsID</th>
                                                <th>Quiz Name</th>
                                                <th>Entered Question</th>
                                                <th>User Name</th>
                                                <th>Created</th>
                                                <th>Modified</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                @foreach (DataRow dataRow in Model.Rows)
                                {
                                    <tr>
                                        <td>@dataRow["QuizWiseQuestionsID"]</td>
                                        <td>@dataRow["QuizName"]</td>
                                        <td>@dataRow["QuestionText"]</td>
                                        
                                        <td>@dataRow["UserName"]</td>
                                        <td>@dataRow["Created"]</td>
                                        <td>@dataRow["Modified"]</td>
                                        <td>
                                            <a asp-controller="MST_QuizWiseQuestions" asp-action="QuizWiseQuestionsForm" asp-route-QuizWiseQuestionsID="@dataRow["QuizWiseQuestionsID"]" class="btn btn-primary" onclick="return confirm('Are you sure you want to delete this QuuzWizeQuestion?')">
                                                <i class="bi bi-pencil-fill"></i>Edit

                                            </a>
                                            <a asp-controller="MST_QuizWiseQuestions" asp-action="QuizWiseQuestionsDelete" asp-route-QuizWiseQuestionsID="@dataRow["QuizWiseQuestionsID"]" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure you want to delete this QuuzWizeQuestion?')">
                                                <i class="bi bi-trash">Delete</i>
                                            </a>

                                        </td>

                                    </tr>
                                }
                                        </tbody>
                                
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>
