@{
}
@model DataTable
@using System.Data
<a class="btn btn-success float-end mb-2 mt-3" asp-area="" asp-controller="Home" asp-action="AddEmployee">Add Employee</a>

<!-- Table with stripped rows -->
<table class="table datatable">
    <h2 class="mt-3">Employee List</h2>
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Name</th>
            <th>Salary</th>
            <th>Joining Date</th>
            <th>Department</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow dataRow in Model.Rows)
        {
            <tr>
                <td>@dataRow["EmployeeID"]</td>
                <td>@dataRow["Name"]</td>
                <td>@dataRow["Salary"]</td>
                <td>@dataRow["JoiningDate"]</td>
                <td>@dataRow["Department"]</td>
                <td>
                    <a asp-controller="Home" asp-action="EditEmployee" asp-route-EmployeeID="@dataRow["EmployeeID"]" class="btn btn-primary">
                        <i class="bi bi-pencil-fill"></i> Edit
                    </a>
                    <a asp-controller="Home" asp-action="DeleteEmployee" asp-route-EmployeeID="@dataRow["EmployeeID"]" class="btn btn-danger btn-xs" onclick="return confirm('Are you sure you want to delete this Employee?')">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
